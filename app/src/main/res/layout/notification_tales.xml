<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        >


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/post_image"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:layout_marginTop="16dp"
            android:layout_alignParentTop="true"
            />

        <TextView
            android:id="@+id/likes_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:textSize="14sp"
            android:layout_marginStart="8dp"
            android:fontFamily="serif"
            android:layout_marginTop="24dp"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:layout_below="@id/post_image"
            android:layout_marginLeft="8dp" />

        <TextView
            android:id="@+id/likes_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:textSize="14sp"
            android:layout_marginStart="4dp"
            android:fontFamily="serif"
            android:layout_marginTop="24dp"
            android:text="Likes"
            android:layout_toEndOf="@id/likes_count"
            android:layout_toRightOf="@id/likes_count"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:layout_below="@id/post_image"
            android:layout_marginLeft="4dp" />

        <TextView
            android:id="@+id/comments_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:textSize="14sp"
            android:layout_marginStart="8dp"
            android:fontFamily="serif"
            android:layout_marginTop="24dp"
            android:layout_toEndOf="@id/likes_text"
            android:layout_toRightOf="@id/likes_text"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:layout_below="@id/post_image"
            android:layout_marginLeft="8dp" />

        <TextView
            android:id="@+id/comments_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:textSize="14sp"
            android:layout_marginStart="4dp"
            android:fontFamily="serif"
            android:layout_marginTop="24dp"
            android:text="Comments"
            android:layout_toEndOf="@id/comments_count"
            android:layout_toRightOf="@id/comments_count"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:layout_below="@id/post_image"
            android:layout_marginLeft="4dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:id="@+id/divider2"
            android:layout_marginTop="8dp"
            android:layout_below="@id/likes_count"
            android:background="@color/half_black"
            android:layout_weight="0"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider2"
            android:layout_marginTop="4dp"
            android:paddingBottom="5dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LIKE"
                android:fontFamily="serif"
                android:textStyle="normal"
                android:textSize="12sp"
                android:gravity="center_vertical"
                android:paddingTop="4dp"
                android:id="@+id/like_view"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="60dp"
                android:layout_marginLeft="60dp"
                android:drawableLeft="@drawable/like_button"
                android:drawableStart="@drawable/like_button"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="COMMENT"
                android:fontFamily="serif"
                android:textStyle="normal"
                android:textSize="12sp"
                android:id="@+id/comment_view"
                android:layout_toRightOf="@id/like_view"
                android:layout_toEndOf="@id/like_view"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:gravity="center_vertical"
                android:paddingTop="4dp"
                android:drawableLeft="@drawable/comments"
                android:drawableStart="@drawable/comments"
                />
        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>




